<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/gradient_background"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="195dp">

            <TextView
                android:id="@+id/textViewLast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="110dp"
                android:text="Corcoran"
                android:fontFamily="sans-serif-light"
                android:textColor="#FFFFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="31dp"
                android:layout_marginTop="80dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp"
                android:text="Tustin, CA"/>

            <TextView
                android:text="Style: Street"
                android:id="@+id/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="110dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#FFFFFFFF"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:background="@drawable/back" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:src="@drawable/corcoran"
                app:civ_border_color="#FFFFFFFF"
                app:civ_border_width="5dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="83dp"
                android:src="@drawable/flo" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_person_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="19dp"
                android:fontFamily="sans-serif-normal"
                android:text="followers"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="80dp"
                android:fontFamily="sans-serif-light"
                android:text="5,763"
                android:textColor="#000"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginRight="107dp"
                android:layout_marginTop="160dp"
                android:src="@drawable/ic_email_black_24dp"
                android:id="@+id/Signout"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="158dp"
                android:fontFamily="sans-serif-light"
                android:text="CONTACT"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:text="Leo"
                android:id="@+id/textViewFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="49dp"
                android:layout_marginTop="80dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#FFFFFFFF"
                android:textSize="24sp" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/back">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:text="@string/bio"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-regular"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back">

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="Sponsors"
                android:textColor="#000" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/emerica" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/diamond" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/bones" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/active" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/etnies" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/spitfire" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_control_point_black_24dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="38dp" />

                </LinearLayout>

            </HorizontalScrollView>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/back">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="Videos"
                android:textColor="#000" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_gravity="center_vertical"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="50dp"
                        android:src="@mipmap/ic_video1"/>

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="50dp"
                        android:src="@mipmap/ic_video2"/>

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="50dp"
                        android:src="@mipmap/ic_video3"/>


                </LinearLayout>

            </HorizontalScrollView>

        </FrameLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemBackground="@drawable/back"
            app:itemIconTint="#000"
            app:itemTextColor="#000"
            app:menu="@menu/buttom_nav" />

    </RelativeLayout>

</LinearLayout>

